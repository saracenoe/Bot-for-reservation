{
  "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
  "type": "AdaptiveCard",
  "version": "1.3",
  "body": [
    {
      "type": "Image",
      "url": "https://i.pinimg.com/564x/4f/2e/bb/4f2ebb7eb06829e37cf87fe542074334.jpg",
      "size": "Stretch",
      "horizontalAlignment": "Center"
    },
    {
      "type": "Image",
      "url": "https://i.imgur.com/Vhs3bwR.png",
      "size": "small",
      "horizontalAlignment": "right"
    },
    {
      "type": "TextBlock",
      "size": "Large",
      "weight": "Bolder",
      "text": "Hi, I'm Groot,\n your FlyMe Bot helper.\n Please greet me and I will help you book your plane.\n To make your booking, I only need the following information:\n- Departure city\n- Destination city\n- Departure date\n- Return date\n- Budget for the trip",
      "wrap": true,
      "maxLines": 0,
      "horizontalAlignment": "Center",
      "color": "Dark",
      "spacing": "Large"
    },
    {
      "type": "TextBlock",
      "size": "Medium",
      "text": "Got confused?\nJust ask for a little \"HELP\".",
      "wrap": true,
      "maxLines": 0,
      "spacing": "Large",
      "weight": "Default",
      "horizontalAlignment": "Center",
      "isSubtle": true
    }
  ],
  "backgroundImage": {
    "url": "https://unsplash.com/photos/vS3idIiYxX0/download?ixid=MnwxMjA3fDB8MXxzZWFyY2h8OXx8d2hpdGV8ZW58MHx8fHwxNjU0MDc4ODcx&force=true&w=100",
    "horizontalAlignment": "Center",
    "verticalAlignment": "Center"
  }
}